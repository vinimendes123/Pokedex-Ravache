const pokemonModel = require('../Model/pokemonModel');

const getAllPokemons = (req,res) => {
    const pokemons = pokemonModel.getPokemons();
    res.render('index', { pokemons });
};

const getPokemons = (req,res) =>{
    const pokemons = pokemonModel.getPokemonById(req.params.id);
    if(pokemons){
        res.render('pokemon', {pokemons});
    }else {
        res.statis(404).send ('Pokemon n√£o encontrado');
    }
}


module.exports =  {getAllPokemons, getPokemons};